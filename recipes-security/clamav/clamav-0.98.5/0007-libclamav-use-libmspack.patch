-  /* store local state */
-  QTM_STORE_BITS;
-  qtm->window_posn = window_posn;
-  qtm->frame_start = frame_start;
-  qtm->H = H;
-  qtm->L = L;
-  qtm->C = C;
-
-  return CL_SUCCESS;
-}
