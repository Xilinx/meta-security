-      /* re-align input */
-      if (bits_left & 7) QTM_REMOVE_BITS(bits_left & 7);
-      do { QTM_READ_BITS(i, 8); } while (i != 0xFF);
-      qtm->header_read = 0;
-
-      /* window wrap? */
-      if (window_posn == qtm->window_size) {
