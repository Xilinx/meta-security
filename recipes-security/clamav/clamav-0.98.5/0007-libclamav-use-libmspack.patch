-	}
-	out_bytes -= i;
-	qtm->o_ptr = &window[0];
-	qtm->o_end = &window[0];
-	window_posn = 0;
-      }
-
-      frame_start = window_posn;
-    }
-
-  } /* while (more bytes needed) */
-
-  if (out_bytes > 0) {
-    i = (int) out_bytes;
-    if (qtm->wflag && (ret = mspack_write(qtm->ofd, qtm->o_ptr, i, qtm->file)) != CL_SUCCESS) {
-      return qtm->error = ret;
-    }
-    qtm->o_ptr += i;
-  }
