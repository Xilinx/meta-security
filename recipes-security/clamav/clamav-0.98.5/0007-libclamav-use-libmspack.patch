-  for (sym = pos; sym < table_mask; sym++) {
-    reverse = sym; leaf = 0; fill = nbits;
-    do { leaf <<= 1; leaf |= reverse & 1; reverse >>= 1; } while (--fill);
-    table[leaf] = 0xFFFF;
