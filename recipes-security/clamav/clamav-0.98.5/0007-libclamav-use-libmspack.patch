-	case 5: /* selector 5 = fixed length match (4 bytes) */
-	  QTM_GET_SYMBOL(qtm->model5, sym);
-	  QTM_READ_BITS(extra, qtm->extra_bits[sym]);
-	  match_offset = qtm->position_base[sym] + extra + 1;
-	  match_length = 4;
